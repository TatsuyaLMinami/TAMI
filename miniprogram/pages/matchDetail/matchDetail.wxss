.matchDetail{
    width: 100%;
    
}
.title{
    text-align: center;
}
.top{
    background: lightgrey;
    padding: 5px 0px;
    display: flex;
    justify-content: space-around;
}
.topText{
    margin-right: 10px;
}
.my,.enemy{
    padding: 5px 0;
    text-align: center;
    width: 50%;
    display: inline-block;
    color: white;
}
.ellipsis{
    text-overflow :ellipsis;
    overflow: hidden;
    white-space: nowrap;
}
.ellipsis:hover{
    overflow: visible;
}
.table {
    border: 0px solid darkgray;
    width:100%;
}

.tr {
    display: flex;
    width: 100%;
    justify-content: center;
    height: 3rem;
    align-items: center;
}

.td {
    width: 40%;
    justify-content: center;
    text-align: center;
}

.bg-w {
    background: snow;
}

.bg-g {
    border-bottom: 1px solid green;
}

.th {
    width: 40%;
    justify-content: center;
    background: #3366FF;
    color: #fff;
    display: flex;
    height: 3rem;
    align-items: center;
}